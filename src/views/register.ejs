<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Formulario de registro'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	<!-- /Header -->

		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Formulario de registro</h2>
				</div>
			</div>
			<div class="col-12">
				<form action="/users/register" method="POST" autocomplete="off">
					<div class="row product-detail justify-content-center">
						<div class="col-12 col-md-7">
							<label for="userName" class="form-label">Nombre:</label>
							<input type="text" id="userName" name="userName" class="form-input" value= "<%=locals.oldUserData && oldUserData.userName %>" >
							<% if (locals.errors && errors.userName) {%> 
								<div class="text-danger"><%=errors.userName.msg %></div>
								<% } %>
						</div>

						<div class="col-12 col-md-7">
							<label for="" class="form-label">Contrase√±a</label>
							<input type="password" id="password" name="password" class="form-input">
							<% if (locals.errors && errors.password) {%> 
								<div class="text-danger"><%=errors.password.msg %></div>
								<% } %><br>
						</div>
						
	
						<div class="col-7">
							<button type="submit" class="buy-now-button">Registrarse</button>
						</div>
					</div>
				</form>
			</div>
	
		</div>
		<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>